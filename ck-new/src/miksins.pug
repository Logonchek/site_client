- var eventControl = false

mixin card(event, src, heading, textBold, text, textBold2, bold, link)
		if eventControl
			.wrapper
				.plug
		else 
			if link
				.wrapper
					a.wrapper__(href=link)
						.wrapper__icon
							img(src=src)
							.out_batton.ab-order=heading
						p.text
							span.increase.increase-block=textBold
							| 
							span=text
							| 
							span(class=bold)=textBold2
			else 
				.wrapper
					.plug=event
					.wrapper__
						.wrapper__icon
							img(src=src)
							.out_batton.ab-order=heading
						p.text.text-br
							span.increase=textBold
							| 
							span=text
							| 
							span(class=bold)=textBold2
		

